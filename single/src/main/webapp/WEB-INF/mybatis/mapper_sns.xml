<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
     
     <mapper namespace="com.kitri.single.sns.dao.SnsDao">
     	<select id="getUser" parameterType="String" resultType="userDto">
     		select *
     		from single_user 
     		where user_id = #{snsEmail} 
     	</select>
     	<select id ="getSnsLogin" parameterType="snsDto" resultType="snsDto">
     		select sns_id snsId, sns_type snsType, user_id userId, sns_token snsToken, sns_connect_date snsConnectDate
     		from sns_login
     		where sns_id = #{snsId} 
     	</select>	
     </mapper>
     
     
